<?xml version="1.0"?>
<templates>

    <!--
        BASE
    -->

    <template id="main">
        <![CDATA[
            <div id="main"></div>
        ]]>
    </template>

    <template id="wrapper">
        <![CDATA[
            <div id="wrapper"></div>
        ]]>
    </template>

    <!--
        Interactive
    -->

    <template id="interactive-element">
        <![CDATA[
            <div data-template="interactive-element" id="interactive-element"></div>
        ]]>
    </template>

    <!--
        PAGES
    -->

    <template id="page-home">
        <![CDATA[
            <section id="page-home" class="page page-home">

            </section>
        ]]>
    </template>

