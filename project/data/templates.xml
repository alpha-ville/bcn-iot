<?xml version="1.0"?>
<templates>

    <!--
        BASE
    -->

    <template id="main">
        <![CDATA[
            <div id="main"></div>
        ]]>
    </template>

    <template id="wrapper">
        <![CDATA[
            <div id="wrapper"></div>
        ]]>
    </template>

    <!--
        Interactive
    -->

    <template id="interactive-element">
        <![CDATA[
            <div data-template="interactive-element" id="interactive-element"></div>
        ]]>
    </template>

    <!--
        PAGES
    -->

    <template id="page-home">
        <![CDATA[
            <section id="page-home" class="page page-home">

            </section>
        ]]>
    </template>

  <template id="breadcrumbs">
    <![CDATA[
        <% _.each(list, function(data){ %>
            <div class="breadcrumbItem" data-id="<%=data.get('id')%>" data-type="<%= (data.get('shape') == 'triangle' ? 'purposes' : 'dataSources') %>">
                <div class='<%=data.get('shape')%>'>
                    <span class="<%=data.get('icon_id')%>" data-pack="default"></span>
                </div>

                <div class="name-container">
                    <p data-lang='en'><%= data.get('name_en') %></p>
                    <p data-lang='cat'><%= data.get('name_cat') %></p>
                </div>

            </div>
        <% }) %>
    ]]>
  </template>

  <template id="objects-list">
    <![CDATA[
        <div class="object-list-container">
            <% _.each(projects, function(object) { %>
                <div class="carousel-item">
                    <% if(object.get('video') != "") { %>
                        <video id="video" controls preload="auto" width="624" height="350" poster="<%= path + object.get('video') %>.jpg">
                             <source src="<%= path + object.get('video') %>.mp4" type='video/mp4' />
                             <source src="<%= path + object.get('video') %>.ogg" type='video/ogg' />
                        </video>
                    <% } else { %>
                        <img width="624" height="350" src="<%= path + object.get('image') %>.jpg">
                    <% } %>
                </div>
            <% }) %>
        </div>
    ]]>
    </template>

    <template id="overlay-content">
        <![CDATA[
            <div id="overlay-content" class="overlays overlay-content">
                <div class="container">

                    <div class="breadcrumbs">

                    </div>

                    <div class="container-shape">
                        <div class='<%=shape%>'>
                            <span class="<%=icon%>" data-pack="default"></span>
                        </div>
                    </div>

                    <div class="title-container">
                        <h1 data-lang='en'><%=title_en%></h1>
                        <h1 data-lang='cat'><%=title_cat%></h1>
                    </div>

                    <div class="content">
                        <p data-lang='en'><%= content_en %></p>
                        <p data-lang='cat'><%= content_cat %></p>
                    </div>

                    <ul class="lang-buttons">
                        <div class='shape'></div>
                        <li data-selected data-lang='en'>ENGLISH</li>
                        <li data-lang='cat'>CATALAN</li>
                    </ul>

                </div>

                <div class="close-button">
                    <span class="ion-ios-close-outline"></span>
                </div>
            </div>
        ]]>
    </template>

     <template id="overlay-content-data">
        <![CDATA[
            <div id="overlay-content" class="overlays overlay-content">
                <div class="container">

                    <div class="container-shape">
                        <div class='<%=shape%>'>
                            <span class="<%=icon%>" data-pack="default"></span>
                        </div>
                    </div>

                    <div class="title-container">
                        <h1 data-lang='en'><%=title_en%></h1>
                        <h1 data-lang='cat'><%=title_cat%></h1>
                    </div>

                    <div class="content">
                        <p data-lang='en'><%= content_en %></p>
                        <p data-lang='cat'><%= content_cat %></p>
                    </div>

                    <ul class="lang-buttons">
                        <div class='shape'></div>
                        <li data-selected data-lang='en'>ENGLISH</li>
                        <li data-lang='cat'>CATALAN</li>
                    </ul>

                </div>

                <div class="close-button">
                    <span class="ion-ios-close-outline"></span>
                </div>
            </div>
        ]]>
    </template>

    <template id="overlay-diagram">
        <![CDATA[
            <div id="overlay-diagram" class="overlays overlay-diagram">
                <div class="container">

                    <svg id="line1" width="180px" height="5px" viewBox="0 0 180 5">
                        <line x1="0" x2="180" y1="1" y2="1" stroke="#b9b9b8" stroke-width="1" stroke-linecap="round" stroke-dasharray="1, 5"/>
                    </svg>
                    <svg id="line2" width="180px" height="5px" viewBox="0 0 180 5">
                        <line x1="0" x2="180" y1="1" y2="1" stroke="#b9b9b8" stroke-width="1" stroke-linecap="round" stroke-dasharray="1, 5"/>
                    </svg>
                    <svg id="line3" width="180px" height="5px" viewBox="0 0 180 5">
                        <line x1="0" x2="180" y1="1" y2="1" stroke="#b9b9b8" stroke-width="1" stroke-linecap="round" stroke-dasharray="1, 5"/>
                    </svg>
                    <svg id="line4" width="180px" height="5px" viewBox="0 0 180 5">
                        <line x1="0" x2="180" y1="1" y2="1" stroke="#b9b9b8" stroke-width="1" stroke-linecap="round" stroke-dasharray="1, 5"/>
                    </svg>
                    <svg id="line5" width="180px" height="5px" viewBox="0 0 180 5">
                        <line x1="0" x2="200" y1="1" y2="1" stroke="#b9b9b8" stroke-width="1" stroke-linecap="round" stroke-dasharray="1, 5"/>
                    </svg>

                    <div class="center-piece">
                        <div class='triangle'>
                            <span class="ion-android-laptop" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>

                    <div class="top-center-piece">
                        <div class='triangle'>
                            <span class="ion-android-desktop" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>

                    <div class="top-right-piece">
                        <div class='square'>
                            <span class="ion-android-desktop" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>

                    <div class="bottom-right-piece">
                        <div class='circle'>
                            <span class="ion-ios-game-controller-b-outline" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>

                    <div class="bottom-left-piece">
                        <div class='circle'>
                            <span class="ion-ios-flask-outline" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>

                    <div class="top-left-piece">
                        <div class='circle'>
                            <span class="ion-ios-flame-outline" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>
                </div>
            </div>
        ]]>
    </template>

</templates>
