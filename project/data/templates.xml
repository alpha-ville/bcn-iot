    <template id="overlay-content">
        <![CDATA[
            <div id="overlay-content" class="overlays overlay-content">
                <div class="container">
                    <div class="container-shape">
                        <div class='<%=shape%>'>
                            <span class="<%=icon%>" data-pack="default"></span>
                        </div>
                    </div>

                    <div class="breadcrumbs">

                    </div>

                    <div class="title-container">
                        <h1 data-lang='en'><%=title_en%></h1>
                        <h1 data-lang='cat'><%=title_cat%></h1>
                    </div>

                    <div class="content">
                        <p data-lang='en'><%= content_en %></p>
                        <p data-lang='cat'><%= content_cat %></p>
                    </div>

                    <ul class="lang-buttons">
                        <div class='shape'></div>
                        <li data-selected data-lang='en'>ENGLISH</li>
                        <li data-lang='cat'>CATALAN</li>
                    </ul>

                    <% if (video) { %>
                    <div class="video-player">
                        <video id="video"
                          controls preload="auto" width="624" height="350"
                          poster="<%=video%>.jpg">
                         <source src="<%=video%>.mp4" type='video/mp4' />
                         <source src="<%=video%>.ogg" type='video/ogg' />
                         Your browser does not support the video tag.
                        </video>
                    </div>
                    <% } %>
                </div>
            </div>
        ]]>
    </template>



    <template id="overlay-diagram">
        <![CDATA[
            <div id="overlay-diagram" class="overlays overlay-diagram">
                <div class="container">

                    <svg id="line1" width="180px" height="5px" viewBox="0 0 180 5">
                        <line x1="0" x2="180" y1="1" y2="1" stroke="#b9b9b8" stroke-width="1" stroke-linecap="round" stroke-dasharray="1, 5"/>
                    </svg>
                    <svg id="line2" width="180px" height="5px" viewBox="0 0 180 5">
                        <line x1="0" x2="180" y1="1" y2="1" stroke="#b9b9b8" stroke-width="1" stroke-linecap="round" stroke-dasharray="1, 5"/>
                    </svg>
                    <svg id="line3" width="180px" height="5px" viewBox="0 0 180 5">
                        <line x1="0" x2="180" y1="1" y2="1" stroke="#b9b9b8" stroke-width="1" stroke-linecap="round" stroke-dasharray="1, 5"/>
                    </svg>
                    <svg id="line4" width="180px" height="5px" viewBox="0 0 180 5">
                        <line x1="0" x2="180" y1="1" y2="1" stroke="#b9b9b8" stroke-width="1" stroke-linecap="round" stroke-dasharray="1, 5"/>
                    </svg>
                    <svg id="line5" width="180px" height="5px" viewBox="0 0 180 5">
                        <line x1="0" x2="200" y1="1" y2="1" stroke="#b9b9b8" stroke-width="1" stroke-linecap="round" stroke-dasharray="1, 5"/>
                    </svg>

                    <div class="center-piece">
                        <div class='triangle'>
                            <span class="ion-android-laptop" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>

                    <div class="top-center-piece">
                        <div class='triangle'>
                            <span class="ion-android-desktop" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>

                    <div class="top-right-piece">
                        <div class='square'>
                            <span class="ion-android-desktop" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>

                    <div class="bottom-right-piece">
                        <div class='circle'>
                            <span class="ion-ios-game-controller-b-outline" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>

                    <div class="bottom-left-piece">
                        <div class='circle'>
                            <span class="ion-ios-flask-outline" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>

                    <div class="top-left-piece">
                        <div class='circle'>
                            <span class="ion-ios-flame-outline" data-pack="default"></span>
                        </div>
                        <div>text text</div>
                    </div>
                </div>
            </div>
        ]]>
    </template>

</templates>
