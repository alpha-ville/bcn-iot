<?xml version="1.0"?>
<templates>

    <!--
        BASE
    -->

    <template id="main">
        <![CDATA[
            <div id="main"></div>
        ]]>
    </template>

    <template id="wrapper">
        <![CDATA[
            <div id="wrapper"></div>
        ]]>
    </template>

    <!--
        Interactive
    -->

    <template id="interactive-element">
        <![CDATA[
            <div data-template="interactive-element" id="interactive-element"></div>
        ]]>
    </template>

    <!--
        Home-Tooltip
    -->

    <template id="home-tooltip">
        <![CDATA[

            <div class="toolTip">

                <div class="textBoxWrapper">

                        <div class="leftBoarder">
                        </div>

                        <div class="textBoxContainer table">
                            <div class="tableCell">
                                <div class="text">
                                    <span class="en">HOME</span><br>
                                    <span class="cat">HOLA</span>
                                </div>
                            </div>
                        </div>

                        <div class="rightBoarder">
                        </div>

                </div>

                <svg width="140" height="20" class="arrow">
                    <path d="M0,0 L55,0 L70,20 L85,0 L140,0" style="stroke: #000000; fill:none; stroke-width:2px; stroke-linejoin: miter;"> </path>
                </svg>

            </div>

        ]]>
    </template>

    <!--
        PAGES
    -->

    <template id="page-home">
        <![CDATA[
            <section id="page-home" class="page page-home">
                <span class="logo">IOTORAMA</span>
                <div class="arrow-left slick-prev"></div>
                <div class="arrow-right slick-next"></div>
            </section>
        ]]>
    </template>

  <template id="breadcrumbs">
    <![CDATA[
        <% _.each(list, function(data, i){ %>
            <div class="breadcrumbItem" data-index="<%=i%>" data-id="<%=data.get('id')%>" data-type="<%= data.get('model') %>">
                <div class='<%=data.get('shape')%>'>
                    <!-- <span class="<%=data.get('icon_id')%>" data-pack="default"></span> -->

                    <div tooltip <%=data.get('shape')%>>
                        <img width="60" height="60" class="svg" src="https://googledrive.com/host/<%= data.get('icon_id') %>">

                        <h1 data-lang='en'><%= data.get('name_en') %></h1>
                        <h1 data-lang='cat'><%= data.get('name_cat') %></h1>

                        <p data-lang='en'><%= data.get('copy_en') %></p>
                        <p data-lang='cat'><%= data.get('copy_cat') %></p>
                    </div>

                </div>

                <div class="name-container">
                    <p data-lang='en' data-inline><%= data.get('name_en') %></p>
                    <p data-lang='cat' data-inline><%= data.get('name_cat') %></p>
                </div>
            </div>
        <% }) %>
    ]]>
  </template>

  <template id="objects-list">
    <![CDATA[
        <div class="object-list-container">
            <% _.each(projects, function(object) { %>
                <div class="carousel-item" id="<%= object.get('id') %>">
                    <% if(object.get('video') != "") { %>

                    <video class="video-js vjs-sublime-skin" controls fullscreen="none" preload="auto" width="800" height="500">
                        <source src="https://googledrive.com/host/<%= object.get('video') %>" type='video/mp4'>
                    </video>

                    <% } else { %>
                        <div class="list-background-image" style="background-image:url('https://googledrive.com/host/<%= object.get('image') %>')"></div>
                    <% } %>
                </div>
            <% }) %>
        </div>
    ]]>
    </template>

